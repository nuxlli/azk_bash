#!/usr/bin/env bash
# Summary: Search azk file in current project
set -e
[ -n "$AZK_DEBUG" ] && set -x

find_local_file() {
  local root="$1"
  while [ -n "$root" ]; do
    if [ -e "${root}/azkfile.json" ]; then
      echo "${root}/azkfile.json"
      exit
    fi
    root="${root%/*}"
  done
}

file=$(
  find_local_file "$AZK_DIR"
  [ "$AZK_DIR" = "$PWD" ] || find_local_file "$PWD"
)

# Tools
source "$(azk-root)/private/bin/common.sh"

if [ -z "$file" ]; then
  azk.error "no such '%{yellow}azkfile.json%{reset}' in current project"
  exit 1
else
  # Valid azk file
  if cat $file | jq -c "." 1>/dev/null; then
    echo $file
  else
    azk.error "'%{yellow}$file%{reset}' is not valid json format"
    exit 1;
  fi
fi
