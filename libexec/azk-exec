#!/usr/bin/env bash
#
# Summary: Run an executable with the image-app
#
# Usage: azk exec <command> [arg1 arg2...]

set -e
[ -n "$AZK_DEBUG" ] && set -x

# Provide azk completions
if [ "$1" = "--complete" ]; then
  exit
fi

# Save --final flag
if [ "$1" = "--final" ]; then
  final=true; shift
fi

# Interactive ?
if [ "$1" = "-i" ]; then
  export AZK_INTERACTIVE=true
  shift
fi

exec_command="$@"
if [ -z "$exec_command" ]; then
  azk-help --usage exec >&2
  exit 1
fi

# requires azkfile
azkfile=`azk-azkfile`

# run only is --final flag
if [ -z "$final" ]; then
  exec azk-agent-exec exec "$@"
fi

# Check provision
image=$(azk-provision --get-name app)
azk-provision app

# Tools
source "$(azk-root)/private/bin/common.sh"

# Run with docker
if [ ! -z "$AZK_INTERACTIVE" ]; then
  interactive=" -t -i";
fi

azk.info "[%{green}exec%{reset}] running the command '$@'"
eval "docker run -v=`pwd`:/app${interactive} $image /bin/bash -c '$@'"
